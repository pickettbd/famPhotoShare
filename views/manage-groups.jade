extends layout

block content
  h1 Manage Groups
  p Create New Group:
  p
    input(placeholder='group name')
    .left-button
      a(href='') Create Group
  p Add User to Group:
  p
    select
      option(value='Smith Family') Smith Family
      option(value='Miller Family') Miller Family
      option(value='+ create new group') + create new group
  p
    input(placeholder='search for user')
    .left-button
      a(href='') Add User to Group
  p Invite New Users:
  p
    input(placeholder='email address')
    .left-button
      a(href='') Invite User
