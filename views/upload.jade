extends layout

block content
	h1 Add Photos
	p Select Group 
		select(name="grp")
			option(value='Smith Family') Smith Family
			option(value='Miller Family') Miller Family
			option(value='+ create new group') + create new group
	p Select Event 
		select(name="evt")
			option(value='Summer Vacation') Summer Vacation
			option(value='+ create new event') + create new event
	form(method="post" name="form1" action="/" enctype="multipart/form-data")
		p
			input(type='file' name='photos' required multiple)
		p
			button(type='button' onclick='upload_form()').button Add Photos
	script(type="text/javascript").
		function upload_form() {
			document.form1.action = "/api/groups/"+document.grp.value+"/event/"+document.evt.value+"/photos";
			document.form1.submit();
		}
