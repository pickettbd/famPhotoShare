extends layout

block content
	div(ng-controller="ThumbController as thumbController")
		h1 Get Photos
		p Select Group 
			select
				option(value="Smith Family") Smith Family
				option(value="Miller Family") Miller Family
		p Select Event 
			select
				option(value="Summer Vacation") Summer Vacation
				option(value="Christmas") Christmas
		a(href="").button Get Photos
		div.section.group(ng-controller="PanelController as panel")
			div.col.span_1_of_4(ng-class="{ active: panel.isSelected(thumb.id) }", ng-repeat="thumb in thumbController.thumbs")
				img.fit(ng-src="{{thumb.url}}", ng-click="panel.selectPhoto(thumb.id)")
		
